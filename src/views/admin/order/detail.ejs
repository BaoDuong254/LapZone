<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MVC - Dự án laptopshop" />
    <meta name="author" content="MVC" />
    <title>Order Detail - MVC</title>
    <link rel="icon" type="image/svg" href="/favicon/favicon.svg">
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../layouts/header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../layouts/sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Manage Orders</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active"><a href="/admin/order">Orders</a></li>
            </ol>
            <div class="mt-5">
              <div class="row">
                <div class="col-12 mx-auto">
                  <div class="d-flex justify-content-between">
                    <h5>Order Detail - ID: <%= id %></h5>
                  </div>
                  <hr />
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <th>Sản phẩm</th>
                        <th>Tên</th>
                        <th>Giá cả</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                      </thead>
                      <tbody>
                        <% orderDetails.forEach( function (orderDetail, index) { %>
                        <tr>
                          <th scope="row">
                            <div class="d-flex align-items-center">
                              <img
                                src="/images/product/<%= orderDetail.product.image %>"
                                class="img-fluid me-5 rounded-circle"
                                style="width: 80px; height: 80px"
                                alt=""
                              />
                            </div>
                          </th>
                          <td>
                            <p class="mb-0 mt-4">
                              <a target="_blank" href="/product/<%= orderDetail.product.id %>"
                                ><%= orderDetail.product.name %></a
                              >
                            </p>
                          </td>
                          <td>
                            <p class="mb-0 mt-4">
                              <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                              }).format(orderDetail.price) %>
                            </p>
                          </td>
                          <td>
                            <div class="input-group quantity mt-4" style="width: 100px">
                              <input
                                type="text"
                                class="form-control form-control-sm text-center border-0"
                                value="<%= orderDetail.quantity %>"
                                disabled
                              />
                            </div>
                          </td>
                          <td>
                            <p class="mb-0 mt-4">
                              <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                              }).format(orderDetail.price * orderDetail.quantity) %>
                            </p>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
        <%- include('../layouts/footer.ejs'); -%>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
  </body>
</html>

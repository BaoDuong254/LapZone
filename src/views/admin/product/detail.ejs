<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MVC - Dự án laptopshop" />
    <meta name="author" content="MVC" />
    <title>Create Product - <%= user.fullName %></title>
    <link rel="icon" type="image/svg" href="/favicon/favicon.svg">
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
      $(document).ready(() => {
        const avatarFile = $("#avatarFile");
        avatarFile.change(function (e) {
          const imgURL = URL.createObjectURL(e.target.files[0]);
          $("#avatarPreview").attr("src", imgURL);
          $("#avatarPreview").css({ display: "block" });
        });
      });
    </script>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../layouts/header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../layouts/sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Manage Products</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active"><a href="/admin/product">Products</a></li>
            </ol>
            <div>
              <div style="width: 600px; margin: auto">
                <h3 style="padding: 10px 0">View detail a product</h3>
                <form action="/admin/update-product" method="POST" enctype="multipart/form-data">
                  <input type="text" name="id" value="<%= product.id%>" style="display: none;"/>
                  <div class="row">
                    <div class="mb-3 col-6">
                      <label class="form-label">Name</label>
                      <input type="text" class="form-control" name="name" value="<%= product.name %>" />
                    </div>
                    <div class="mb-3 col-6">
                      <label class="form-label">Price</label>
                      <input type="number" class="form-control" name="price" value="<%= product.price %>" />
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Detail description</label>
                    <textarea class="form-control" rows="2" name="detailDesc"><%= product.detailDesc %></textarea>
                  </div>
                  <div class="row">
                    <div class="mb-3 col-6">
                      <label class="form-label">Short description</label>
                      <input type="text" class="form-control" name="shortDesc" value="<%= product.shortDesc %>" />
                    </div>
                    <div class="mb-3 col-6">
                      <label class="form-label">Quantity</label>
                      <input type="text" class="form-control" name="quantity" value="<%= product.quantity %>" />
                    </div>
                  </div>
                  <div class="row">
                    <div class="mb-3 col-6">
                      <label class="form-label">Factory</label>
                      <select name="factory" class="form-select">
                        <% factoryOptions.forEach( function (factory) { %>
                          <option value="<%= factory.value %>" <%= factory.value === product.factory ? "selected" : "" %>><%= factory.name %></option>
                        <% }) %>
                      </select>
                    </div>
                    <div class="mb-3 col-6">
                      <label class="form-label">Target</label>
                      <select name="target" class="form-select">
                        <% targetOptions.forEach( function (target) { %>
                          <option value="<%= target.value %>" <%= target.value === product.target ? "selected" : "" %>><%= target.name %></option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="avatarFile" class="form-label">Ảnh minh họa</label>
                    <input class="form-control" type="file" id="avatarFile" accept=".png, .jpg, .jpeg" name="image" />
                  </div>
                  <% if(product.image) {%>
                  <div class="mb-3">
                    <img
                      src="/images/product/<%= product.image %>"
                      alt="Ảnh minh họa"
                      id="avatarPreview"
                      style="max-width: 250px; display: block"
                    />
                  </div>
                  <% } else { %>
                  <img style="max-width: 250px; display: none" alt="avatar preview" id="avatarPreview" />
                  <% } %>
                  <div class="mb-3 mt-3">
                    <button type="submit" class="btn btn-warning">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </main>
        <%- include('../layouts/footer.ejs'); -%>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
  </body>
</html>

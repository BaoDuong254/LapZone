{
  "name": "lapzone",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/generated/**/* src/views/**/* dist/",
    "build": "npm run clean && tsc && npm run copy-files && tsc-alias",
    "start": "node dist/app.js",
    "dev": "nodemon",
    "debug": "nodemon --inspect=9229 -e ts,tsx --exec node -r ts-node/register -r tsconfig-paths/register ./src/app.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@quixo3/prisma-session-store": "^3.1.13",
    "@types/bcrypt": "^6.0.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@prisma/client": "^6.18.0",
    "@types/express-session": "^1.18.2",
    "copyfiles": "^2.4.1",
    "prisma": "^6.18.0",
    "rimraf": "^6.1.0"
  }
}

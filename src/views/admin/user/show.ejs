<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MVC - Dá»± Ã¡n lapzone" />
    <meta name="author" content="MVC" />
    <title>Manage User - <%= user.fullName %></title>
    <link rel="icon" type="image/svg" href="/favicon/favicon.svg" />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../layouts/header.ejs'); -%>
    <div id="layoutSidenav">
      <%- include('../layouts/sidenav.ejs'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Manage Users</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active">Users</li>
            </ol>
            <div>
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px">
                <h5>Table users</h5>
                <div><a href="/admin/create-user" class="btn btn-warning">Create a new user</a></div>
              </div>
              <table class="table table-hover table-bordered">
                <thead>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>Action</th>
                </thead>
                <tbody>
                  <% users.forEach( function (user) { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.username %></td>
                    <td><%= user.address %></td>
                    <td>
                      <div style="display: flex; gap: 10px">
                        <form action="/admin/view-user/<%= user.id %>" method="get">
                          <button class="btn btn-warning" type="submit">View</button>
                        </form>
                        <form
                          action="/admin/delete-user/<%= user.id %>"
                          method="POST"
                          onsubmit="return confirm('Are you sure?')"
                        >
                          <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                  <li class="page-item">
                    <a
                      class="<%= page === 1 ? 'disabled page-link' : 'page-link' %>"
                      href="/admin/user?page=<%= page - 1 %>"
                      aria-label="Previous"
                    >
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <% for(let i = 1; i<=totalPages; i++) {%>
                  <li class="page-item">
                    <a class="<%= page === i ? 'active page-link' : 'page-link' %>" href="/admin/user?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
                  <li class="page-item">
                    <a
                      class="<%= page === totalPages ? 'disabled page-link' : 'page-link' %>"
                      href="/admin/user?page=<%= page + 1 %>"
                      aria-label="Next"
                    >
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </main>
        <%- include('../layouts/footer.ejs'); -%>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
  </body>
</html>
